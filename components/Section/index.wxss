@import "./../../app.wxss";

page{
    width: 100%;
    height: 100%;
}

.section-box{
    width: 100%;
    height: 80rpx;
    background-color: #fff;

    display: flex;
    flex-direction: row;
}

.section-box> view{
    flex: 1;

    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.section-theme{
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.section-theme-text{
    font-size: 26rpx;
    color: #7e7878;
}

.section-theme-text-active{
    color: #ee735c;
}

.section-theme-icon{
    width: 28rpx;
    height: 28rpx;
    margin-left: 10rpx;
}

