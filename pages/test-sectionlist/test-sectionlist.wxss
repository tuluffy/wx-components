page{
    width: 100%;
    height: 100%;
}

.container{
    width: 100%;
    height: 100%;
    background-color: #F5F5F5;
}

.section-box{
    width: 100%;
    height: 80rpx;
    background-color: #fff;

    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.section-box> view{
    height: 100%;

    display: flex;
    flex-direction: row;
    align-items: center;
}

.section-theme{
    height: 100%;
    display: flex;
    align-items: center;
}

.section-theme-text{
    font-size: 26rpx;
    color: #7e7878;
}

.section-theme-text-active{
    font-size: 26rpx;
    color: #ee735c !important;
}

.section-theme-icon{
    width: 28rpx;
    height: 28rpx;
    margin-left: 10rpx;
}

.list-box{
    width: 100%;
    background-color: #fff;
    padding: 0 30rpx 0 20rpx;
}

.list-box> view{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;

    position: relative;
}

